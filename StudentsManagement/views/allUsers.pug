doctype html
html
  head
    title Users List
    style.
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th, td {
        padding: 8px 12px;
        border: 1px solid #ccc;
      }
      th {
        background-color: #f2f2f2;
      }
  body
    h1 List of Users

    if users.length
      table
        thead
          tr
            th ID
            th Email
            th Name
            th Password
        tbody
          each user in users
            tr
              td= user.id
              td= user.email
              td= user.name
              td= user.password
    else
      p No users found.
