<!DOCTYPE html>
<html>

<head>
  <title>Users List</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }

    th,
    td {
      padding: 8px 12px;
      border: 1px solid #ccc;
    }

    th {
      background-color: #f2f2f2;
    }
  </style>
</head>

<body>
  <h1>List of Users</h1>
  <a href="/users/new">New user</a>
  <% if (users.length) { %>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>Password</th>
          <th>View</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(user) { %>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= user.password %>
            </td>
            <td><a href='/user/<%= user.id%>'>Profile</a></td>
          </tr>
          <% }) %>
      </tbody>
    </table>
    <% } else { %>
      <p>No users found.</p>
      <% } %>

</body>

</html>